{
  "default": {
    "timeout": 10000,
    "formatOptions": {
      "snippetInterface": "async-await"
    },
    "paths": [
      "tests/features/**/*.feature"
    ],
    "dryRun": false,
    "require": [
      "tests/steps/**/*.ts",
      "hooks/**/*.ts"
    ],
    "requireModule": [
      "ts-node/register"
    ],
    "format": [
      "json:allure-results/results.json",
      "progress",
      "allure-cucumberjs/reporter"
    ]
  }
}
